{% block body %}





    {{form_start(f)}}
    <table class="table table-bordered table-reponsive">
        <tr>
            <td>{{form_label(f.nom)}}</td>
            <td>{{form_widget(f.nom)}}</td>
        </tr>
        <tr>
            <td>{{form_label(f.prenom)  }}</td>
            <td>{{form_widget(f.prenom) }}</td>
        </tr>
        <tr>
            <td>{{form_label(f.email)  }}</td>
